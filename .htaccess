# Basharjobs htaccess Apache/PHP settings

# Don't	show directory listings	for URLs which map to a	directory
Options -Indexes

<IfModule mod_rewrite.c>
    RewriteEngine On


    # Enterprise dispatcher (with any trailing path)

    # map the second segment to  controller if it doesn't match a directory
    # map the third segment to a function if it is there

    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    RewriteRule ^(.*)$ /index.php/$1 [L]


</IfModule>

# Make us manage the 404 errors
<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.php
</IfModule>


